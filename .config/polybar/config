[module/prev]
type = custom/script
exec = echo "prev"
click-left = "playerctl previous"
[module/playpause]
type = custom/script
exec = echo "play"
click-left = "playerctl play-pause"
[module/next]
type = custom/script
exec = echo "->‚èµ‚è©"
click-left = "playerctl next"

